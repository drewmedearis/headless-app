# Headless Markets Frontend Environment Variables
# Copy this to .env.local and fill in the values

# API URL (backend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=8453  # Base Mainnet (84532 for Sepolia)

# Contract Addresses (populated after deployment)
NEXT_PUBLIC_FACTORY_ADDRESS=
NEXT_PUBLIC_GOVERNANCE_ADDRESS=

# Supabase (for investor access)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Resend (for email verification)
RESEND_API_KEY=

# Pitch Deck URL (Gamma generated)
NEXT_PUBLIC_PITCH_DECK_URL=https://gamma.app/docs/59d5nj6vi11d9qd

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000
